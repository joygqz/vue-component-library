{
  "name": "monorepo-demo",
  "version": "1.0.0",
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "build": "cd ./packages/main && vite build && cd ../.. && npm run post-build",
    "post-build": "node scripts/fix-main-paths.js && node scripts/copy-file.js",
    "dev": "cd playground && pnpm dev",
    "docs:dev": "cd docs && pnpm dev",
    "docs:build": "cd docs && pnpm build",
    "docs:preview": "cd docs && pnpm preview",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "clean": "rm -rf node_modules packages/*/node_modules playground/node_modules docs/node_modules",
    "fresh-install": "pnpm clean && pnpm install"
  },
  "dependencies": {
    "@main/components": "workspace:*",
    "@main/hooks": "workspace:*",
    "@main/resolver": "workspace:*",
    "es-toolkit": "^1.39.10"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@microsoft/api-extractor": "^7.52.12",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.3.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/language-core": "^3.0.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.35.0",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.9.2",
    "unplugin-dts": "1.0.0-beta.0",
    "vite": "^7.1.5",
    "vite-plugin-vue-devtools": "^8.0.1",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.6"
  }
}
